<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38a059"
    android:orientation="vertical"
    tools:context="fi.atteheino.puzzle.MainActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_puzzle_header"
        android:id="@+id/SelectPuzzleHeader"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#1F1F1F"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColorHighlight="#000000"
        android:singleLine="false"
        android:shadowColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageContainer">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/firstPuzzleImage"
            android:src="@drawable/imag1858"
            android:background="@drawable/background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/secondPuzzleImage"
            android:src="@drawable/koala"
            android:background="@drawable/background" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageContainer2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/thirdPuzzleImage"
            android:src="@drawable/penguins"
            android:background="@drawable/background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/fourthPuzzleImage"
            android:src="@drawable/tulips"
            android:background="@drawable/background" />

    </LinearLayout>


</LinearLayout>
